<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BasicAnimation.HomePage" Title="Basic Animation Demos">
	<StackLayout Margin="0,20,0,0">
        <Button Text="Rotate Animation" Clicked="OnRotateAnimationButtonClicked" BackgroundColor="#AF2ED0" TextColor="#eee"/>
        <Button Text="Relative Rotate Animation" Clicked="OnRelativeRotateAnimationButtonClicked" BackgroundColor="#442ED0" TextColor="#eee"/>
        <Button Text="Rotate Animation with Anchors" Clicked="OnRotateAnimationWithAnchorsButtonClicked" BackgroundColor="#2E6BD0" TextColor="#eee" />
        <Button Text="Multiple Rotations" Clicked="OnMultipleRotationAnimationButtonClicked" BackgroundColor="#2ED0CE" TextColor="#eee" />
        <Button Text="Scale Animation" Clicked="OnScaleAnimationButtonClicked" BackgroundColor="#2ED055" TextColor="#eee" />
        <Button Text="Relative Scale Animation" Clicked="OnRelativeScaleAnimationButtonClicked" BackgroundColor="#D0CE2E" TextColor="#eee" />
        <Button Text="Transform Animation" Clicked="OnTransformAnimationButtonClicked" BackgroundColor="#DA8313" TextColor="#eee"  />
        <Button Text="Fade Animation" Clicked="OnFadeAnimationButtonClicked" BackgroundColor="#D61515" TextColor="#eee" />
	</StackLayout>
</ContentPage>